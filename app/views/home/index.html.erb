<div class="flex flex-col items-center w-full h-full py-12">
  <div class="flex flex-col items-center w-full px-12 space-y-12">
    <div class="w-full px-2 text-left">
      <h1 class="w-64 text-2xl font-medium">
        Â¡Bienvenido a Hobbies App!
      </h1>
    </div>
    <img class="h-44" src="<%= image_url('landing-illustration.png') %>" alt="">

    <div class="flex flex-col w-full space-y-6">
      <span class="text-xl font-medium">Cursos mas populares:</span>
      <popular-courses :courses="<%= SerializeUtils.map_to_json(@courses, each_serializer: PreviewCourseSerializer) %>"></popular-courses>
    </div>
    <carousel>
  <% @courses.each do |course| %>
      <slide>
      <div class='border rounded border-black px-4 py-2'>
          <a class='is-size-2 has-text-weight-bold'><%= course.name%></a>
          <br>
          <p> Categoria: <%= course.category %></p>
          <p> Fecha Termino: <%= course.end_date %></p>
          <p> Rating: <%= course.reviews.average(:rating) %></p>
          <p><%= link_to 'View details', courses_path(:id => course.id) %></p>
        </div>
      </slide>
  <% end %>
  </carousel>
    </div>
  </div>
</div>