<!DOCTYPE html>
<html class="w-full h-full">
  <head>
    <title>HobbiesApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>

    <%= favicon_link_tag image_path('red-owl.svg') %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body class="w-full h-full">
    <div id="vue-app" class="min-h-screen">
      <div class="flex flex-col items-center w-full h-full">
        <% if current_user %>
          <% if current_page?(profile_users_path) %>
            <%= render 'shared/user_navigation' %>
          <% else %>
            <%= render 'shared/navigation' %>
          <% end %>
        <% else %>
          <%= render 'shared/no_user_navigation' %>
        <% end %>
        <div class="flex-grow w-full h-full max-w-8xl">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
