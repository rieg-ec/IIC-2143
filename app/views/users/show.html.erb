<div class="flex flex-col items-center w-full h-full pt-12  space-y-12">
  <div class="flex justify-center max-w-md">
    <div class="flex flex-col items-center px-2 space-y-12">
      <div class="flex flex-col items-center space-y-4">
        <img class="w-32 rounded-full" src="<%= @user.avatar_url %>" alt="user avatar" />
      </div>
      <div class="flex flex-col items-center space-y-2">
        <span><%= @user.full_name %></span>
      </div>
    </div>
  </div>
  <div class="flex flex-col items-left px-4 w-full h-full">
  <div class="flex flex-col w-full space-y-6">
  <span class="text-xl font-medium">Cursos Creados:</span>
</div>

<div class="grid lg:grid-cols-4 gap-4">
  <% @user.courses_owned.each do |course| %>
    <div>
      <li class="hover:shadow-lg flex rounded-lg">
      <div class="items-center">
        <a href= "/new" class="hover:border-transparent hover:shadow-xs w-full flex items-center justify-center rounded-lg border-2 border- border-red-400 text-sm font-medium py-4">
          <%= course.name %>
          <p> Categoria: <%= course.category %></p>
          <p> Fecha Termino: <%= course.end_date %></p>
          <p> Rating: <%= course.average_rating %></p>
        </a>
        </div>
      </li>
    </div>
  <% end %>
</div>
</div>

<div class="flex flex-col items-center w-full h-full pt-12  space-y-12">
  <button class="h-8 px-4 m-2 text-white bg-red-500 rounded-lg transition-colors duration-150 focus:shadow-outline hover:bg-red-200"><%= link_to 'Editar Perfil', edit_user_path(:id => @user.id) %></button>
</div>
  
