<div class="flex flex-col items-center w-full h-full pt-12 bg-red-200 space-y-12">
  <h1 class="text-xl font-semibold text-gray-800">Mi perfil</h1>
  <div class="flex justify-center max-w-md">
    <%= form_with model: @user do |f| %>
      <div class="flex flex-col items-center px-2">
        <div class="flex flex-col items-center space-y-4">
          <img class="w-32 rounded-full" src="<%= @user.decorate.avatar_url %>" alt="user avatar" />
          <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <label for="first-name">Nombre</label>
          <input type="text" name="user[first-name]" id="first-name">
        </div>
        <div class="flex flex-col items-center space-y-2">
          <label for="last-name">Apellido</label>
          <input type="text" name="user[last-name]" id="last-name">
        </div>
        <div class="pt-12">
          <input type="submit" value="Guardar perfil" class="px-5 py-3 text-white bg-red-500 rounded-lg">
        </div>
      </div>
    <% end %>
  </div>
</div>
