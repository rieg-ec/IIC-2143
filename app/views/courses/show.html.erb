<div class="flex flex-col items-center w-full h-full py-12 space-y-12">
  <course-info
    :course="<%= SerializeUtils.to_json_value(@course) %> | camelizeKeys"
    :lectures="<%= SerializeUtils.map_to_json(@lectures) %> | camelizeKeys"
    :reviews="<%= SerializeUtils.map_to_json(@reviews) %> | camelizeKeys"
  >
  </course-info>
  <% if !@is_student %>
    <div class="flex items-center justify-center w-full">
      <%= link_to "Inscribirse", register_student_course_path(id: @course.id), method: :post,
                    class: "px-12 py-2 text-2xl text-center text-white bg-red-500 rounded hover:bg-red-600" %>
    </div>
  <% end %>
</div>
